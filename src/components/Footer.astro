---
// Frontmatter
const currentYear = new Date().getFullYear();
const siteName = 'Dental Wisdom Vault';
const socialLinks = [
  { icon: 'fab fa-facebook', url: '#', label: 'Facebook' },
  { icon: 'fab fa-twitter', url: '#', label: 'Twitter' },
  { icon: 'fab fa-instagram', url: '#', label: 'Instagram' },
  { icon: 'fab fa-linkedin', url: '#', label: 'LinkedIn' }
];
---

<footer class="bg-teal-800 text-white py-8">
  <div class="container mx-auto px-4 text-center">
    <p class="text-lg">&copy; {currentYear} {siteName}. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="text-gray-300 hover:text-orange-400 transition-colors duration-300" aria-label={link.label}>
          <i class={link.icon} aria-hidden="true"></i>
        </a>
      ))}
    </div>
  </div>
</footer>