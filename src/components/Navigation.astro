---
// Frontmatter (TypeScript/JavaScript runs at build time)
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' }
];
---

<nav class="bg-[#0d7f7f] shadow-md">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-white hover:text-[#ff7f50] transition-colors">Dental Wisdom Vault</a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-6">
        {navItems.map((item) => (
          <a href={item.href} class="text-white hover:text-[#ff7f50] transition-colors font-medium">{item.label}</a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-white">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 flex flex-col gap-4">
      {navItems.map((item) => (
        <a href={item.href} class="text-white hover:text-[#ff7f50] transition-colors font-medium">{item.label}</a>
      ))}
    </div>
  </div>
</nav>

<!-- Client-side JavaScript for mobile toggle -->
<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>

<style>
  /* Custom Tailwind utilities if needed, but Tailwind handles most */
  /* Ensure Font Awesome is loaded in the main layout */
</style>